            margin-top: 18px;
            width: 15px;
            float: left;
            text-indent: -9999px;
        }

        #tFocus-leftbtn {
            margin-right: 5px;
            background-position: -455px -60px;
        }

        #tFocus-rightbtn {
            background-position: -480px -60px;
        }

        #dashboard_links {
            cursor:pointer;
        }
    </style>
