                background: -webkit-linear-gradient(top, rgba(256,256,256,0),rgba(62,150,158,0.5)); /*Safari5.1 Chrome 10+*/
                background: -o-linear-gradient(top, #fff, #0000ff); /*Opera 11.10+*/

            }
           
        .future {
