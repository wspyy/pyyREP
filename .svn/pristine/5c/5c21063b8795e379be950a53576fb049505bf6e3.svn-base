        function getImgList(e) {
            var pubdate = $("#txt_Time").val();
            var date = pubdate.replace(/-/g, "");
            $.ajax({
                url: "../../Data/GetAirForeCastData.ashx",
                data: { flag: "picture", item: e.id, date: date },
                dataType: "json",
                success: function (result) {
                    var strhtml1 = "";
                    var strhtml2 = "";
                    if (result) {
                        debugger;
                        for (var i = 0; i < result.length; i++) {
                            strhtml1 += " <li><a href='#'><img height='400px' src='" + "http://" + document.location.hostname + "/AirData/AirForeCastData/CMAQ/" + result[i]["imgurl"] + "'></a></li>";
                            //result[i].imgurl
                            if (i == 0)
                                strhtml2 += " <li class='active'><img width='80px;' src='" + "http://" + document.location.hostname + "/AirData/AirForeCastData/CMAQ/" + result[i]["imgurl"] + "'></li>";
                                //2014121320jc/
                            else
                                strhtml2 += " <li><img width='80px;' src='" + "http://" + document.location.hostname + "/AirData/AirForeCastData/CMAQ/" + result[i]["imgurl"] + "'></li>";
                            //2014121320jc/
                        }
                        $("#tFocus-pic").html(strhtml1);
                        $("#tFocus-btn-ul").html(strhtml2);
                        if (!start)
                            addLoadEvent(Focus());
                        start = true;
                    }
                },
                error: function (XMLHttpRequest, textStatus, errorThrown) {

                }
            });
